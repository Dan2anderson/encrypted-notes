<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.EncryptedNotes" parent="Theme.Material3.Dark">

        <item name="colorPrimary">@color/redDark</item>
        <item name="colorPrimaryDark">@color/redLight</item>
        <item name="colorSecondary">@color/redDark</item>
        <item name="colorAccent">@color/tanDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/tanlight</item>
        <item name="android:statusBarColor">@color/redDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- FAB style -->
        <item name="colorPrimaryContainer">@color/redDark</item>
        <item name="colorOnPrimaryContainer">@color/tanlight</item>

        <!-- Disable default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:dialogCornerRadius">18dp</item>
        <item name="dialogCornerRadius">18dp</item>

        <item name="actionOverflowMenuStyle">@style/CustomOverflowMenuStyle</item>
        <item name="popupMenuBackground">@style/CustomOverflowMenuStyle</item>
    </style>
</resources>